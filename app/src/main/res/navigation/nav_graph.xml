<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_launch">

    <fragment
        android:id="@+id/fragment_launch"
        android:name="net.grandcentrix.blutufintegration.ui.LaunchFragment">

        <action
            android:id="@+id/action_launch_to_main"
            app:destination="@id/fragment_main"
            app:popUpTo="@id/fragment_launch"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/fragment_main"
        android:name="net.grandcentrix.blutufintegration.ui.MainFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_main_detail"
            app:destination="@id/fragment_detail" />

    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="net.grandcentrix.blutufintegration.ui.DetailFragment"
        android:label="@string/fragment_label_detail">

        <argument
            android:name="device"
            app:argType="net.grandcentrix.blutufintegration.data.model.DeviceUiState" />
    </fragment>

</navigation>